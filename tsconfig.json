{
  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"],
    "target": 2.7
  },
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "importHelpers": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true, // to-remove
    "esModuleInterop": true,
    "allowJs": true, // added to import http libs
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": ["node_modules", "tests/**/*.ts", "tests/**/*.tsx", "./dist/**/*"]
}
